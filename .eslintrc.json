{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "commonjs": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended"
    ],
    "rules": {
        "no-unused-vars": [ "error", {
            "varsIgnorePattern": "^(ne|rdr|ref|.*_)$",
            "argsIgnorePattern": "_$",
            "destructuredArrayIgnorePattern": "_$"
        }]
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    }
}
